<page layout="1column" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="product.info.main">
            <block class="Magento\Catalog\Block\Product\View" name="brand.title" as="brandTitle"
                                       template="Simple_Brands::product/brand-title.phtml" before="-"/>
        </referenceContainer>
        <referenceContainer name="product.info.media">

            <block class="Magento\Catalog\Block\Product\View" name="brand.image" as="brandImage"
                                       template="Simple_Brands::product/brand-image.phtml" before="-"/>

        </referenceContainer>
    </body>
</page>